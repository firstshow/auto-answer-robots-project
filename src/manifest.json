{
  "name": "小海豚",
  "version": "0.0.4",
  "manifest_version": 3,
  "author": "Eleven",
  "description": "直播助手——小海豚",
  "action": {
    "default_popup": "index.html",
    "default_icon": "./resources/logo.png"
  },
  "icons": {
    "16": "./resources/logo.png",
    "48": "./resources/logo.png",
    "96": "./resources/logo.png",
    "128": "./resources/logo.png"
  },
  "browser_action": {
    "default_title": "自动评论机器人",
    "default_popup": "index.html/#/login"
  },
  "permissions": [
    "cookies",
    "https://www.douyin.com/*",
    "tabs",
    "https://*/*",
    "storage"
  ],
  "host_permissions": [
    "https://www.douyin.com/*",
    "http://*/*",
    "<all_urls>",
    "*://*/*" 
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/contentScript/index.js"
      ],
      "run_at": "document_end"
    }
  ]
}