{
  "name": "自动回复机器人",
  "version": "0.0.1",
  "manifest_version": 2,
  "author": "eleven",
  "description": "自动回复机器人",
  "action": {
    "default_popup": "index.html",
    "default_icon": "./resources/logo.png"
  },
  "icons": {
    "16": "./resources/logo.png",
    "48": "./resources/logo.png",
    "96": "./resources/logo.png",
    "128": "./resources/logo.png"
  },
  "browser_action": {
    "default_title": "自动评论机器人",
    "default_popup": "index.html/#/login"
  },
  "permissions": [
    "cookies",
    "tabs",
    "https://*/*",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": ["/background/index.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/contentScript/index.js"
      ],
      "run_at": "document_end"
    }
  ]
}